<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#515141" />
                    <solid android:color="#BDBDB8" />
                    <corners android:radius="10dp"/>

                    <padding
                        android:bottom="5dp"
                        android:left="5dp"
                        android:right="5dp"
                        android:top="5dp" />

                </shape>
            </item>

            <item>

                <bitmap
                    android:gravity="right|center"
                    android:src="@drawable/ic_down" />
            </item>

        </layer-list>
    </item>
</selector>
